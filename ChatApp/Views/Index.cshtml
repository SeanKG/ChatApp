@{
    PageData["title"] = "AngularJS SPA Template for Visual Studio";
}

<div class="row">

    <div class="col-sm-9">
        <h2>Welcome!</h2>

        <app-version></app-version>

        <input type="text" ng-model="message" ui-keypress="{13:'sendMsg($event)'}"  />

        <ul>
            <li ng-repeat="message in chatHub.messages track by $index">{{message | json}}</li>
        </ul>
    </div>

    <div class="col-sm-3">
        <ul>
            <li ng-repeat="user in chatHub.users track by $index" >{{user.name}}</li>
        </ul>
    </div>

</div>



